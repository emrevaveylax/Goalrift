<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goalrift.football.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Goalrift">

        <!-- Login ekranı açılışta gözükecek -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="stateVisible|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <!-- Ana menü -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="orientation|keyboardHidden|screenSize|uiMode"
            android:screenOrientation="sensorLandscape"
            android:resizeableActivity="false"/>

        <!-- Oyun ekranı -->
        <activity
            android:name="com.goalrift.football.game.ui.play.GameActivity"
            android:exported="false"
            android:configChanges="orientation|keyboardHidden|screenSize|uiMode"
            android:screenOrientation="sensorLandscape"
            android:resizeableActivity="false"/>

        <!-- Ayarlar -->
        <activity
            android:name=".SettingsActivity"
            android:label="Ayarlar"
            android:exported="false"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.Haxlite.Settings"
            android:parentActivityName=".MainActivity" />

        <activity android:name="com.goalrift.football.game.ui.store.StoreActivity"
            android:exported="false"
            android:label="Mağaza"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>



    </application>
</manifest>
