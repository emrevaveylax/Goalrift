<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/contentRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp">

        <!-- OYNANIŞ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="#22000000"
            app:strokeWidth="1dp"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oynanış"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#212121"/>

                <!-- Hassasiyet -->
                <TextView
                    android:id="@+id/txtSensValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hassasiyet: 1.0x"
                    android:textColor="#4E4E4E"
                    android:layout_marginTop="10dp" />

                <!-- DİKKAT: Slider sade bırakıldı; tüm konfig kodda yapılacak -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderSens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>

                <!-- Solak / Titreşim -->
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/swLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Solak Kontroller (joystick sağda, şut solda)"
                    android:layout_marginTop="8dp"/>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/swVib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titreşim"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- GÖRSEL -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="#22000000"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Görsel"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#212121"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Grafik Kalitesi"
                    app:endIconMode="clear_text"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="#1B5E20"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <AutoCompleteTextView
                        android:id="@+id/ddGraphics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- DİĞER -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="#22000000"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diğer"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#212121"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReset"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Varsayılanlara Dön"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
